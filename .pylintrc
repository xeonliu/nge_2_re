[MASTER]
# 忽略特定目录
ignore=CVS,.git,__pycache__,build,dist,.venv

# 使用 Python 3
python-version=3.8

# 加载插件
load-plugins=

[MESSAGES CONTROL]
# 禁用特定警告
disable=C0111,  # 缺少模块、类、函数文档字符串
        C0103,  # 变量名不符合规范
        C0301,  # 行太长
        W0311,  # 缩进使用制表符而不是空格
        W0603,  # 全局语句
        R0903,  # 类方法太少
        R0913,  # 函数参数太多
        R0914   # 函数局部变量太多

[FORMAT]
# 最大行长度
max-line-length=88

# 缩进
indent-string='    '

[BASIC]
# 变量命名规范
good-names=i,j,k,ex,Run,_,id,db

# 函数命名规范
function-rgx=[a-z_][a-z0-9_]{2,30}$

# 变量命名规范
variable-rgx=[a-z_][a-z0-9_]{2,30}$

# 常量命名规范
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# 属性命名规范
attr-rgx=[a-z_][a-z0-9_]{2,30}$

# 参数命名规范
argument-rgx=[a-z_][a-z0-9_]{2,30}$

# 类命名规范
class-rgx=[A-Z_][a-zA-Z0-9]+$

# 模块命名规范
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

[SIMILARITIES]
# 重复代码检测
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no 