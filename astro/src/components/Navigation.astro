---
const links = [
  { name: "首页", url: "/nge_2_re" },
  { name: "项目状态", url: "/nge_2_re/status" },
  { name: "贡献翻译", url: "/nge_2_re/contribute" },
  { name: "关于", url: "/nge_2_re/about" },
];
---

<header id="navigation" class="p-navigation is-dark">
  <div class="p-navigation__row--25-75">
    <div class="p-navigation__banner">
      <div class="p-navigation__tagged-logo">
        <a class="p-navigation__link" href="/nge_2_re/">
          <div class="p-navigation__logo-tag">
            <img
              class="p-navigation__logo-icon"
              src="https://assets.ubuntu.com/v1/82818827-CoF_white.svg"
              alt=""
            />
          </div>
          <span class="p-navigation__logo-title">EVA2汉化计划</span>
        </a>
      </div>
      <ul class="p-navigation__items">
        <li class="p-navigation__item">
          <button class="js-search-button p-navigation__link--search-toggle">
            <span class="p-navigation__search-label">Search</span>
          </button>
        </li>
        <li class="p-navigation__item">
          <button class="js-menu-button p-navigation__link">Menu</button>
        </li>
      </ul>
    </div>
    <nav class="p-navigation__nav" aria-label="Example main">
      <ul class="p-navigation__items">
        {
          links.map(({ name, url }) => (
            <li class="p-navigation__item">
              <a class="p-navigation__link" href={url}>
                {name}
              </a>
            </li>
          ))
        }
      </ul>
      <ul class="p-navigation__items">
        <li class="p-navigation__item"></li><li class="p-navigation__item">
          <a class="p-navigation__link" href="https://xeonliu.github.io/eva2_archive">官网存档</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  // Vanilla Framework navigation toggle functionality
  function initNavigation() {
    const nav = document.querySelector('#navigation');
    const menuButton = nav?.querySelector('.js-menu-button');

    if (!nav || !menuButton) {
      return;
    }

    menuButton.addEventListener('click', function(e) {
      e.preventDefault();
      nav.classList.toggle('is-active');
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNavigation);
  } else {
    initNavigation();
  }
</script>
